@page "/"
@using InTeamImTeamApp.States

@inject NavigationState NavigationState

<PageTitle>Home</PageTitle>

<div class="d-flex flex-column dashboard-wrapper">
    <div class="dashboard-header d-flex pa-6 flex-column">
        <div class="d-flex mt-2 align-items-center" style="height: fit-content;">
            <MudAvatar Size="Size.Large" Style="height: 62px; width: 62px">
                <MudImage Src="man.webp"></MudImage>
            </MudAvatar>
            <div class="d-flex flex-column ml-3">
                <span>Hey</span>
                <span style="font-size: 20px; font-weight: bold">Marc ♻️</span>
            </div>
            
            <MudBadge Content="3" Overlap="true" Color="Color.Secondary" Class="ml-auto mt-n2">
                <MudIcon Size="Size.Medium" Icon="@Icons.Material.Outlined.Notifications"></MudIcon>
            </MudBadge>

        </div>

        <div class="mt-3">
            <p class="" style="hyphens: auto;text-align: justify;" >Du nutzt die Lebensdauer deiner Geräte zu 47% aus.</p>
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-segment filled" style="width: 24%;"></div>
                    <div class="progress-segment filled" style="width: 20%;"></div>
                    <div class="progress-segment" style="width: 20%;"></div>
                    <div class="progress-segment" style="width: 20%;"></div>
                    <div class="progress-segment" style="width: 20%;"></div>
                </div>
                <div class="progress-labels">
                    <span>0%</span>
                    <span>25%</span>
                    <span>50%</span>
                    <span>75%</span>
                    <span>100%</span>
                </div>
            </div>
        </div>

    </div>
    <div class="dashboard-content">
        <div class="d-flex align-items-center justify-content-center mt-8">
            <div style="text-align: center">
                <p style="font-size: 16px">Du hast bereits</p>
                <h1 style="font-size: 70px">1337</h1>
                <p>Punkte</p>
            </div>
        </div>
        
        <div class="pt-5">
            <h2 class="pl-5">Notifications</h2>
            
            <div class="px-5" style="max-height: 325px; overflow-y: scroll;">
                <div class="dashboard-notification_item pa-5 mt-6">
                    <h3 style="font-size: 18px">Wasserkocher</h3>
                    <p>Dein Wasserkocher benötigt wieder ein wenig Liebe. Entkalche ihn doch</p>

                    <div style="float: right" class="mt-n3 mr-1">
                        <MudButton EndIcon="@Icons.Material.Filled.Check" Size="Size.Small" Variant="Variant.Outlined">Done</MudButton>
                    </div>
                </div>
                <div class="dashboard-notification_item pa-5 mt-6">
                    <h3 style="font-size: 18px">Kaffeemaschine</h3>
                    <p>Deine Kaffeemaschine könnte eine Reinigung gebrauchen. Vergiss nicht, den Filter zu wechseln!</p>

                    <div style="float: right" class="mt-n6 mr-1">
                        <MudButton EndIcon="@Icons.Material.Filled.Check" Size="Size.Small" Variant="Variant.Outlined">Done</MudButton>
                    </div>
                </div>
                
                <div class="dashboard-notification_item pa-5 mt-6">
                    <h3 style="font-size: 18px">Geschirrspüler</h3>
                    <p>Es ist Zeit, deinen Geschirrspüler zu reinigen. Verwende einen Reiniger, um ihn wieder strahlend sauber zu machen.</p>

                    <div style="float: right" class="mt-n6 mr-1">
                        <MudButton EndIcon="@Icons.Material.Filled.Check" Size="Size.Small" Variant="Variant.Outlined">Done</MudButton>
                    </div>
                </div>
                
            </div>
            
        </div>
    </div>
</div>


<style>
    .dashboard-notification_item {
        height: 140px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .dashboard-wrapper{
        height: 100%;
    }
    
     .dashboard-header {
        background-color: #E20074;
        color: white;
        height: 250px;
    }
    
    .dashboard-content {
        background-color: #f5f5f5;
        border-radius: 20px;
        flex-grow: 1;
        margin-top: -50px;
    }
    
    .progress-container {
        width: 100%;
        max-width: 600px;
        margin: 20px auto;
    }
    
    .progress-labels {
        display: flex;
        justify-content: space-between;
        color: white;
        margin-top: 12px;
        font-weight: bold;
        font-size: 12px;
    }
    
    .progress-bar {
        display: flex;
        width: 100%;
        height: 12px;
        border-radius: 10px;
        overflow: hidden;
        background-color: #e0e0e0;
        flex-direction: row;
    }
    
    .progress-segment {
        height: 100%;
    }
    
    .filled {
        background-color: #00bcd4;
    }
   
    .temperature-info p {
        margin: 0;
        font-weight: bold;
        color: #333;
    }
</style>


@code {

    protected override void OnInitialized()
    {
        NavigationState.CurrentPage = "Home";
    }

}